@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Lowin</title>
    <link href="~/Content/login/auth.css" rel="stylesheet" />
    <link href="~/edoor.ico" type="image/x-icon" rel="shortcut icon" />
</head>
<body>
    <div class="lowin">
        <div class="lowin-brand">
            @*<img src="~/img/kodinger.jpg" alt="logo">*@
            <img src="~/img/jabil.png" alt="logo">
        </div>
        <div class="lowin-wrapper">
            <div class="lowin-box lowin-login">
                <div class="lowin-box-inner">
                    <form>
                        <p>Sign in to continue</p>
                        <div class="lowin-group">
                            <label>Employee Num <a href="#" class="login-back-link">Sign in?</a></label>
                            <input type="text" name="epnumber" autocomplete="epnumber" class="lowin-input" id="log-epnum">
                        </div>
                        <div class="lowin-group password-group">
                            <label>Password <a href="#" class="login-error" hidden>Password Error</a><a href="#" class="forgot-link">@*Forgot Password?*@</a></label>
                            <input type="password" name="password" autocomplete="current-password" class="lowin-input" id="log-password">
                        </div>
                        <button class="lowin-btn login-btn" type="button">
                            Sign In
                        </button>
                        <div class="text-foot">
                            Don't have an account? Please contact with Administrator<a href="" class="register-link">@*Register*@</a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="lowin-box lowin-register">
                <div class="lowin-box-inner">
                    <form>
                        <p>Let's create your account</p>
                        <div class="lowin-group">
                            <label>Employee Num</label>
                            <input type="text" name="epnumber" autocomplete="epnumber" class="lowin-input" id="sign-epnum">
                        </div>
                        <div class="lowin-group">
                            <label>Email</label>
                            <input type="email" autocomplete="email" name="email" class="lowin-input" id="sign-email">
                        </div>
                        <div class="lowin-group">
                            <label>Password</label>
                            <input type="password" name="password" autocomplete="current-password" class="lowin-input" id="sign-password">
                        </div>
                        <button class="lowin-btn signup-btn" type="button">
                            Sign Up
                        </button>
                        <div class="text-foot">
                            Already have an account? <a href="" class="login-link">Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <footer class="lowin-footer"></footer>
    </div>
    <script src="~/Scripts/Customer/cookie.js"></script>
    <script src="~/Scripts/Customer/auth.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script>
		Auth.init({
			login_url: '#login',
			forgot_url: '#forgot'
        });


    </script>
</body>
</html>
